@model BlogAppDevelopment.Models.ArticleIndexModel
    @{ 
        var article = Model;
    }
<div class="col-md-12">
    <div class="blog-entry ftco-animate d-md-flex">
        <a href="single.html" class="img img-2" style="background-image: url(../Content/images/@article.ImagePath);"></a>
        <div class="text text-2 pl-md-4">
            <h3 class="mb-2"><a href="single.html">@article.Title</a></h3>
            <div class="meta-wrap">
                <p class="meta">
                    <span><i class="icon-calendar mr-2"></i>@article.PublishDate</span>
                    <span>
                        @if (article.Categories.Count() > 0)
                        {
                            foreach (var category in article.Categories)
                            {
                                <a href="single.html"><i class="icon-folder-o mr-2"></i>@category.Name</a>
                            }
                        }
                    </span>
                    <span><i class="icon-comment2 mr-2"></i>5 Comment</span>
                </p>
            </div>
            <p class="mb-4">@article.ShortDescription</p>
            <p><a href="#" class="btn-custom">Read More <span class="ion-ios-arrow-forward"></span></a></p>
        </div>
    </div>
</div>
